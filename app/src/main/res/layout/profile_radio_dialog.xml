<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/profileDialogTitle"
        style="@style/AppPreferencePopupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Name" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/profileDialogRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <RadioButton
            android:id="@+id/profileDialogButton0"
            style="@style/AppPreferenceEntry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/label_profile_mode_crunch" />
        <RadioButton
            android:id="@+id/profileDialogButton1"
            style="@style/AppPreferenceEntry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/label_profile_mode_posture" />
    </RadioGroup>
</LinearLayout>