<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.mbientlab.abdisc.DayActivityFragment"
    android:background="@drawable/graph_verticle_gradient">


    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:background="@drawable/graph_horizontal_gradient"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/graph_previous_day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_previousarrow"
            android:background="@null" />

        <TextView android:layout_width="0dp" android:layout_height="75dp"
            android:text="Friday,  July 27"
            android:layout_weight=".6"
            android:id="@+id/activityDay"
            style="@style/AppGraphDate"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal" />

        <ImageButton
            android:id="@+id/graph_next_day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_nextarrow"
            android:background="@null" />
     </LinearLayout>

</FrameLayout>
